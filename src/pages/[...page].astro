---
import type { GetStaticPaths, InferGetStaticPropsType } from 'astro'
import { themeConfig } from '~/.config'
import Pagination from '~/components/Pagination.astro'
import LayoutDefault from '~/layouts/LayoutDefault.astro'
import LayoutPostList from '~/layouts/LayoutPostList.astro'
import { getPostDescription, getPosts } from '~/utils'

const { translate: t } = Astro.locals

export const getStaticPaths = (async ({ paginate }) => {
  const posts = await getPosts({ includeDrafts: true })
  posts.sort((a, b) => {
    if (a.data.pin && !b.data.pin) return -1
    if (!a.data.pin && b.data.pin) return 1
    return 0
  })
  return paginate(posts, { pageSize: themeConfig.site.pageSize })
}) satisfies GetStaticPaths

type Props = InferGetStaticPropsType<typeof getStaticPaths>

const { page } = Astro.props
---

<LayoutDefault>
  <section contain-layout flex="~ col gap-7.5">
    {
      page.data.map((post) => (
        <LayoutPostList post={post} class:list={[{ 'draft-post hidden': post.data.draft }]}>
          <p class="line-clamp-4">{getPostDescription(post)}</p>
        </LayoutPostList>
      ))
    }
  </section>
  <Pagination
    showLeft={Boolean(page.url.prev)}
    leftTitle={t('prev')}
    leftUrl={page.url.prev}
    showRight={Boolean(page.url.next)}
    rightTitle={t('next')}
    rightUrl={page.url.next}
    currentPage={page.currentPage}
    totalPage={page.lastPage}
  />
</LayoutDefault>

<script>
  document.addEventListener('astro:page-load', () => {
    const showDraft = new URLSearchParams(window.location.search).has('draft')
    if (showDraft) {
      document.querySelectorAll('.draft-post').forEach(el => el.classList.remove('hidden'))
    }
  })
</script>
