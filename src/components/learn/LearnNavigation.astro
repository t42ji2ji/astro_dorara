---
interface Props {
  prev?: { title: string; href: string } | null
  next?: { title: string; href: string } | null
}

const { prev, next } = Astro.props
---

{(prev || next) && (
  <nav class="mt-12 pt-6 border-t border-stone-200 dark:border-stone-700">
    <div class="flex justify-between gap-4">
      {prev ? (
        <a
          href={prev.href}
          class="group flex-1 flex flex-col items-start p-4 rounded-lg border border-stone-200 dark:border-stone-700 hover:border-stone-400 dark:hover:border-stone-500 transition-colors"
        >
          <span class="text-xs text-stone-500 dark:text-stone-500 mb-1">上一篇</span>
          <span class="text-sm text-stone-700 dark:text-stone-300 group-hover:text-stone-900 dark:group-hover:text-stone-100 transition-colors">
            ← {prev.title}
          </span>
        </a>
      ) : (
        <div class="flex-1" />
      )}

      {next ? (
        <a
          href={next.href}
          class="group flex-1 flex flex-col items-end p-4 rounded-lg border border-stone-200 dark:border-stone-700 hover:border-stone-400 dark:hover:border-stone-500 transition-colors"
        >
          <span class="text-xs text-stone-500 dark:text-stone-500 mb-1">下一篇</span>
          <span class="text-sm text-stone-700 dark:text-stone-300 group-hover:text-stone-900 dark:group-hover:text-stone-100 transition-colors">
            {next.title} →
          </span>
        </a>
      ) : (
        <div class="flex-1" />
      )}
    </div>
  </nav>
)}
