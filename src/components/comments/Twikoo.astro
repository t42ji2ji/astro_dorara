---
import { themeConfig } from '~/.config'

interface Props {
  path: string
}

const twikooConfig = {
  ...themeConfig.comment?.twikoo,
  el: '#tcomment',
  path: Astro.props.path,
}
---

<div id="tcomment"></div>
<script is:inline src="https://cdn.jsdelivr.net/npm/twikoo@1.6.32/dist/twikoo.all.min.js"></script>
<script is:inline define:vars={{ config: twikooConfig }}>
  twikoo.init(config)
</script>

<style is:global>
  .tk-meta-input {
    background-color: white;
  }
</style>
